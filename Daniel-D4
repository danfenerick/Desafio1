// Daniel Desafio 4 Batalha Naval

#include <stdio.h>

int main() {
    int matriz[10][10];
    int i, j;

    printf("Preencha 2 navios com 3 espa√ßos no tabuleiro 10x10:\n");

    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10; j++) {
            printf("Casa [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    printf("Batalha naval:\n");
    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10; j++) {
            printf("%d ", matriz[i][j]);
        }
    printf("\n");
}





    return 0;
}
